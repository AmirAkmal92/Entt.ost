@{
    Layout = "~/Views/OstAccount/_Layout.cshtml";
}
@section Styles{
    <link href="~/assets/global/plugins/select2/css/select2.min.css" rel="stylesheet" type="text/css" />
    <link href="~/assets/global/plugins/select2/css/select2-bootstrap.min.css" rel="stylesheet" type="text/css" />
}
<div class="container">
    <br />
    <br />
    <h1>Calculate Publish Rate</h1>
    <div class="page-header">
        <h2 style="color:#555"><strong>Domestic Rate<span style="font-size:15px; font-style:italic">&nbsp;&nbsp;- Here you can find the cost of sending mail/parcel within Malaysia</span></strong></h2>
    </div>
    <div class="portlet-body form">

        <div class="col-md-3">&nbsp;</div>
        <div class="col-md-6" id="shipping-rate-form">
            <div class="well">
                <form class="form-horizontal" role="form">
                    <div class="form-body">
                        @*<div class="form-group form-md-line-input">
                                <select class="form-control" id="from-address" placeholder="Sending from"></select>
                                <label for="fromPostcode">From</label>
                                <span class="help-block">Sending from do you want ...</span>
                            </div>*@

                        <div class="form-group" data-bind="visible:true">
                            <label class="control-label col-md-3">From</label>
                            <div class="col-md-9">
                                <div class="input-group">
                                    <span class="input-group-addon">
                                        <i class="fa fa-search font-yellow-casablanca"></i>
                                    </span>
                                    <select class="form-control input-sm" placeholder="Sending from" id="from-address"></select>
                                </div>
                            </div>
                        </div>

                        <div class="form-group" data-bind="visible:true">
                            <label class="control-label col-md-3">
                                To
                            </label>
                            <div class="col-md-9">
                                <div class="input-group">
                                    <span class="input-group-addon">
                                        <i class="fa fa-search font-yellow-casablanca"></i>
                                    </span>
                                    <select class="form-control input-sm" placeholder="Sending to" id="to-address"></select>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-3">Weight</label>
                            <div class="col-md-9">
                                <input type="text" class="form-control" id="weight" placeholder="Weight in KG" data-bind="value: weight">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3">Length</label>
                            <div class="col-md-9">
                                <input type="text" class="form-control" id="length" placeholder="Length in cm" data-bind="value: length">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3">Height</label>
                            <div class="col-md-9">
                                <input type="text" class="form-control" id="height" placeholder="Height in cm" data-bind="value: height">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3">Width</label>
                            <div class="col-md-9">
                                <input type="text" class="form-control" id="width" placeholder="Width in cm" data-bind="value: width">
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <ul data-bind="foreach : products">
                            <li class="mt-list-item">
                                <div class="list-icon-container done">
                                    <i class="icon-check"></i>
                                </div>
                                <div class="" data-bind="text : 'RM ' + ko.unwrap(TotalCost).toFixed(2)"> RM 45.55</div>
                                <div class="list-item-content">
                                    <h3 class="uppercase">
                                        <span data-bind="text : Name">Product name</span>
                                    </h3>
                                </div>
                            </li>
                        </ul>
                    </div>
                    <div class="form-actions pull-right">
                        <button type="button" data-bind="click : getRatesAsync, disable : busy" class="btn btn-sample">
                            Submit
                            <i class="fa fa-spin fa-circle-o-notch" data-bind="visible : busy"></i>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <!-- BEGIN CORE PLUGINS -->
    <script src="~/scripts/underscore.min.js" type="text/javascript"></script>
    <script src="~/assets/global/plugins/jquery.min.js" type="text/javascript"></script>
    <script src="~/assets/global/plugins/bootstrap/js/bootstrap.min.js" type="text/javascript"></script>
    <script src="~/assets/global/plugins/select2/js/select2.full.min.js" type="text/javascript"></script>
    <script src="/scripts/_shipping.rate.js" type="text/javascript"></script>
    <script src="/scripts/knockout-3.4.0.js" type="text/javascript"></script>
    <script src="/scripts/knockout.mapping-latest.js" type="text/javascript"></script>
    <!-- END THEME LAYOUT SCRIPTS -->
}
