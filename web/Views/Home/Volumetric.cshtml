@{
    Layout = "~/Views/OstAccount/_Layout.cshtml";
}
@section Styles{
    <link type="text/css" rel="stylesheet" href="~/assets/general/css/print.css" />
}
<div class="container">
    <br />
    <br />
    <h1><i class="fa fa-dashboard"></i> Weight Calculator</h1>
    <div class="page-header">
        <h2 style="color:#555"><strong>Calculate Volumetric Weight</strong></h2>
    </div>
    <div class="page-body">
        <div class="col-md-1">&nbsp;</div>
        <div class="col-md-10">
            <div class="well">
                <div class="form-signin">
                    <div class="bs-callout bs-callout-warning" id="jquery-required">
                        <h4>Determine Dimensional Weight</h4>
                        <p>
                            Rates are based on the total actual weight or the total dimensional weight of all packages in a shipment, whichever is greater.
                            Shipping charges will be based on the dimensional weight of the shipment when the dimensional weight exceeds the actual weight. Dimensional weight is determined by using Pos Malaysia Berhad volumetric standard.
                            <br />
                            <a class="btn btn-sample" href="http://www.poslaju.com.my/ship-with-us/#" target="_blank">More info...</a>
                        </p>
                    </div>
                    <div class="portlet-body">
                        <div class="row">
                            <div class="col-md-6">
                                <form class="myform" role="form">
                                    <div class="form-body">
                                        <div class="form-group">
                                            <label class="font-red">Length (cm)</label>
                                            <div class="input-group">
                                                <span class="input-group-addon input-circle-left">
                                                    <i class="fa fa-arrows-h"></i>
                                                </span>
                                                <input id="panjang" class="form-control input-circle-right" type="text" name="txt_length" placeholder="Length (In cm)" onkeypress="return isValidNumericInput(event);">
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="font-red">Width (cm)</label>
                                            <div class="input-group">
                                                <span class="input-group-addon input-circle-left">
                                                    <i class="fa fa-expand"></i>
                                                </span>
                                                <input id="lebar" class="form-control input-circle-right" type="text" name="txt_width" placeholder="Width (In cm)" onkeypress="return isValidNumericInput(event);">
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="font-red">Height (cm)</label>
                                            <div class="input-group">
                                                <span class="input-group-addon input-circle-left">
                                                    <i class="fa fa-arrows-v"></i>
                                                </span>
                                                <input id="tinggi" class="form-control input-circle-right" type="text" name="txt_height" placeholder="Height (In cm)" onkeypress="return isValidNumericInput(event);">
                                            </div>
                                        </div>
                                        <div id="weightResult" class="form-group">
                                            <label class="font-red">Volumetric Weight (kg)</label>
                                            <div class="input-group">
                                                <span class="input-group-addon input-circle-left">
                                                    <i class="fa fa-balance-scale"></i>
                                                </span>
                                                <span class="form-control input-circle-right" placeholder="Weight (In kg)" name="txt_result" id="volumetricVal" readonly=readonly></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-actions">
                                        <div class="col-md-12">
                                            <a href="javascript:;" type="button" class="btn btn-sample" data-toggle="modal" data-target=".bs-example-modal-sm" name="button2" id="Button1" onclick="calculateVolumetric();"> Calculate </a>
                                        </div>
                                    </div>
                                </form>
                            </div>
                            <div class="col-md-6">
                                <br /><br />
                                <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" version="1.1" id="Layer_1" x="0px" y="0px" width="267px" height="278px" viewBox="0 0 267 278" enable-background="new 0 0 267 278" xml:space="preserve">
                    
                                <line x1="7.04" y1="100.94" x2="172.9" y2="0.06" class="style0"></line>
                                <polyline points="172.9,0.06 266.66,56.31 100.79,158.29 25.55,112.26 7.04,100.94" id="length" class="style0"></polyline>
                                <polyline points="0,120.08 92.69,176.77 92.69,277.87 0,217.9" id="width" class="style0"></polyline>
                                <polygon points="266.66,177.15 107.32,277.87 107.32,176.77 266.66,79.33" id="height" class="style0"></polygon>
					</svg>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-1">&nbsp;</div>
</div>
@section Scripts{
    <script src="~/assets/general/scripts/main.js" type="text/javascript"></script>
