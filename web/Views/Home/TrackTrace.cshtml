@{
    Layout = "~/Views/OstAccount/_Layout.cshtml";
}
<div class="container">
    <br />
    <br />
    <h1>@*<i class="fa fa-search"></i>*@Track And Trace</h1>
    <div class="page-header">
        <h2 style="color:#555"><strong>Track your parcel by entering tracking number</strong></h2>
    </div>
    <div class="page-body">
        <div class="col-md-2">&nbsp;</div>
        <div class="col-md-8">
            <div class="well">
                <div class="form-signin">
                    <form role="form">
                        <div class="form-body">
                            <div class="col-md-12">
                                <div class="input-group">
                                    <input type="text" class="form-control" placeholder="Insert Tracking Number" data-bind="value: conNote" />
                                    <span class="input-group-btn">
                                        <button class="btn btn-sample" type="button" data-bind="click: search">Track</button>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </form>
                    <br /><br /><br />
                    <table class="table table-striped table-bordered table-advance" data-bind="visible: busy">
                        <thead>
                            <tr>
                                <th style="background-color:#ff6a00; color:white"><center><i class="fa fa-calendar"></i> Date / Time </center></th>
                                <th style="background-color:#ff6a00; color:white"><center><i class="fa fa-cogs"></i> Process </center></th>
                                <th style="background-color:#ff6a00; color:white"><center><i class="fa fa-building-o"></i> Outlet </center></th>
                            </tr>
                        </thead>
                        <tbody data-bind="foreach: results">
                            <tr>
                                <td class="font-grey-mint" data-bind="text:date"></td>
                                <td class="font-grey-mint" data-bind="text:process"></td>
                                <td class="font-grey-mint" data-bind="text:office"></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-md-2">&nbsp;</div>
    </div>
</div>
<script src="@Url.Content("~/Scripts/knockout-3.4.0.js")"></script>
@section Scripts
    {
    <script type="text/javascript">
        var ViewModel = function () {
            var busy = ko.observable(false),
                conNote = ko.observable(),
                table = ko.observable("hidden"),
                results = ko.observableArray(),
                search = function () {

                    busy(true);
                    table("");
                    return $.getJSON("/api/track-traces/" + ko.unwrap(conNote))
                    .done(results);
                };

            return {
                busy: busy,
                conNote: conNote,
                results: results,
                table: table,
                search: search
            };
        };

        $(function () {

            var vm = new ViewModel();
            ko.applyBindings(vm, document.getElementById("panel-track"));
        });
    </script>
}
